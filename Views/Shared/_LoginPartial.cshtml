@using FanKart.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        var user = await UserManager.FindByEmailAsync(User.Identity.Name);
    <li class="nav-item">
            @* <a id="manage" class="nav-link text-dark" style="color:white !important"  asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a> *@
            <a id="manage" class="nav-link text-dark" style="color:black !important" title="Manage">Hello @user.FirstName @user.LastName!</a>
    </li>
    <li class="nav-item">
            <a asp-area="Cart" asp-page="/Cart"><img src="~/Images/CartImage-1.png" style="width:50px;height:50px;"></a>
    </li>  
        <div class="input-group-append">
            <button class="btn btn-primary dropdown-toggle" id="dropdown-header" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Actions</button>
            <div class="header-dropdown-menu" style="display:none; position: absolute">

                   
        <li class="nav-item" style="width:50px;">
            <a asp-area="Orders" asp-page="/Orders"><img src="~/Images/UserIcon.jpeg" style="width:40px;height:40px;"></a>
        </li>
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Landing", new { area = "" })">
            <button id="logout" type="submit" style="color:white;background-color:#0078d7 !important" class="">Logout</button>
                </form>

            </div>
        </div>
        
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" style="color:black !important" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark" style="color:black !important" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>

